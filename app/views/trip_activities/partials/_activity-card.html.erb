<!-- Begin Activity Container -->
<div class = "activitycontainer">
  <!-- Begin centerimage Container -->
  <div class="centerimage">
    <!-- Begin Button Group -->  
    <div id="moreShowHideGroup">
      <div id="mapShow" class="icon-globe"></div>
    </div>
    <!-- End Button Group -->  
    <!-- Begin always_here -->
    <div class="always_here">
      <!-- Begin rightcaption -->
      <div class="rightcaption">
        <h3 id="activity_title">
          <span class="activity_title caption_title"><%= (which_detail_type(@trip_activity,"name")) %></span></br>
          <span class="activity_subtitle caption_summary">Day <%= @trip_activity.activity_day %> (<%= @trip_activity.activity[:duration] %>)  <%#which_detail_type(@trip_activity, "category")%></span>
        </h3>
        <div>
          <p class="caption_large" id="user_description">
            <%= @trip_activity.activity[:description] %>
          </p>
          
          <% unless @trip_activity.activity[:quick_tip].blank? %>
            <div class="well well-small caption_quick_tip caption_large">
              Quick Tip: <%= @trip_activity.activity[:quick_tip] %> 
            </div>
          <% else %>
          <% end %>

        </div>
        <h3 id="more_info_accordion">
          <div class = "caption_summary">More Info</div>
        </h3>
        <div class = "more_info_dl" id="more_info_id">
          <div id = "more-info-buffer-header"></div>
          <div id = "more-info-buffer-content">
            <dl class = "caption_summary">
            <dt>Address:</dt>
            <dd>
              <address>
                <%= check_empty_detail(which_detail_type(@trip_activity,"address1")) %></br>
                <%= check_empty_detail(which_detail_type(@trip_activity,"city")) %>, <%= check_empty_detail(which_detail_type(@trip_activity,"state")) %>
                <%= check_empty_detail(which_detail_type(@trip_activity,"zip")) %>
              </address>  
            </dd>
            <dt>Description: </dt>
            <dd>
              <%= check_empty_detail(which_detail_type(@trip_activity,"description")) %>
            </dd>
            <dt>Category: </dt>
            <dd>
              <%= check_empty_detail(which_detail_type(@trip_activity,"category")) %>
            </dd>
            <dt>Open Hours:</dt>
            <dd>
              <%= check_empty_detail(which_detail_type(@trip_activity,"open_hours")) %>
            </dd>
            <dt>Phone:</dt>
            <dd>
              <%= check_empty_detail(which_detail_type(@trip_activity,"phone")) %>
            </dd>
            <dt>Website:</dt>
            <dd>
              <%= link_to  check_empty_detail(which_detail_type(@trip_activity,"website")).to_s, check_empty_detail(which_detail_type(@trip_activity,"website")).to_s, :target => "_blank", :class => "caption_subtitle" %>
            </dd>
            </dl>
            <div class="foursquare_attribution">Powered by <div id ="accordion_foursquare_logo"></div></div>
          </div>
          <!-- End more-info-buffer-content -->
        </div>
      </div>
      <!-- End rightcaption -->   
    </div>
    <!-- End always_here --> 

        <div class= "front">
          <div class="main_pic_wrap" id="bloop">
            <div data-picture data-alt="<%=alt_name_card_image(@trip_activity)%>" data-class="relative_image">
              <div data-src=<%=select_activity_img(@trip_activity, "", 480)%> > </div> 
              <div data-src=<%=select_activity_img(@trip_activity, "", 480)%> data-media="(min-width: 480px)"></div>
              <div data-src=<%=select_activity_img(@trip_activity, "", 767) %> data-media="(min-width: 767px)"></div>
              <!--[if (lt IE 9) & (!IEMobile)]>
              <div data-src="medium.jpg"></div>
              <![endif]-->
              <!-- Fallback content for non-JS browsers. Same img src as the initial, unqualified source element. -->
              <noscript>
                <img src=<%=select_activity_img(@trip_activity, "", 480)%> alt="Image of Activity">
              </noscript>
            </div>
          </div>   
        </div>

  </div>
  <!-- End centerimage -->

</div>
<!-- End activitycontainer -->  