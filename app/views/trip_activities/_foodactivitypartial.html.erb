<div class = "activitycontainer">
  <div class="centerimage">
  	<div class= "flip-container">
    		<div class= "flipper">
        		<div class= "front">
        			<%= image_tag("view_from_notre_dame_flickr_large.jpg",:alt => "Notre Dame View",:class => "hung_image") %>
        		</div>
    			<div class = "back">
    				I'm a map boy!
    			</div>
    			<div class = "extraside">
    				Address: <%= @trip_activity.activity.restaurant_detail[:address1] %>
            <%= @trip_activity.activity.restaurant_detail[:city] %>, 
            <%= @trip_activity.activity.restaurant_detail[:state] %> </br>
            Description: <%= @trip_activity.activity.restaurant_detail[:description] %> </br>
            Category: <%= @trip_activity.activity.restaurant_detail[:category] %> </br>
            Open Hours: <%= @trip_activity.activity.restaurant_detail[:open_hours] %> </br>
            Website: <%= @trip_activity.activity.restaurant_detail[:website] %>
    			</div>
    		</div>
    	</div>
    	
    	<div>
    		<h3> <%= @trip_activity.activity.restaurant_detail[:name] %><small>  ( <%= @trip_activity.id %> ) </small> </h3>           
  	</div>

  	<div class="btn-group" id="moreShowHideGroup">
    	  <button class="btn active" id="hideAllButton"><i class="icon-picture"></i></button>
      	<button class="btn" id="mapShowHide" href="#"><i class="icon-globe"></i></button>
      	<button class="btn" id="infoShowHide" href="#"><i class="icon-info-sign"></i></button>
  	</div>

  </div>

  <div class="rightcaption">
  <p class="lead" id="rightsidecaption"><%= @trip_activity.activity[:description] %>  </p>
  <div class="well well-small">Quick Tip: <%= @trip_activity.activity[:quick_tip] %> </div> 
  </div>
</div>