<!-- Begin Trip Activities Form Container -->
<div class="publish_trip_activities_container">
TO INSERT FORM HERE for a TRIP_ACTIVITY BUT NEED TO ASSOCIATE TO A @trip

<input type="text" placeholder="Activity">
<input type="text" placeholder="City">
</br>

<div class = "publish_trip_selected_activity_desc">Activity Name and Address Here Link to Foursquare Page</div>
<div class ="publish_trip_activity_pic_select">Picture Selection Pic and Button Here</div>
</br>

<div class = "publish_trip_image">
  <div class = "rightcaption">
    <input type="text" placeholder="Must See?">

    <!--specifying the url allows for specifying which action in the trip_activities controller to hit -->
    <%= form_for([@trip, @trip_activity], :url => { :action => :create }, :remote => true ) do |f| %>

      <%= hidden_field_tag :trip_activity_latlong, @latlong %>
      <%= hidden_field_tag :trip_id, @trip_activity.trip_id %>

      <div class="field">
        <input id="foodvenue" type="text" name="foodvenue" value="<%#= loc %>" placeholder="Venue Name" />
      </div>

      <div class="field">
          <%= f.text_field :activity_day, :placeholder => "Which Day" %>
      </div>
      
      <input type="text" placeholder="Duration"></br>
      <textarea rows="4" placeholder="User Description"></textarea></br>
      <textarea rows="3" placeholder="Quick Tip"></textarea>
      
      <div class="actions">
        <%= f.submit :id => "trip_activities_form_submit" %>
      </div>
    <% end %>

  </div>
</div>

</div>
<!-- Begin Trip Activities Form Container -->
