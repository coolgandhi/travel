<div class="container">
	<div class="row">
		<div class="span4 offset4 well">
			<legend>Please Log In</legend>

				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				  

			      <div class="control-group">
			        <!-- Email -->
			        <%= f.label :email, 'E-mail', :class=> "control-label", :for => "email" %>
			        <div class="controls">
			          <%= f.email_field :email, :class => "input-xlarge", :id => "email", :autofocus => true %>
			        </div>
			      </div>
			      
            <%= f.hidden_field :provider, :value => "normal" %>

			      <div class="control-group">
			        <!-- Password -->
			        <%= f.label :password, 'Password', :class=> "control-label", :for => "password" %>
			        <div class="controls">
			          <%= f.password_field :password, :class => "input-xlarge", :id => "password", :autocomplete => "off" %>
			        </div>
			      </div>


				  <% if devise_mapping.rememberable? -%>
			        <div class="control-group">
			          <!-- Remember Me -->
			          <div class="controls">
			          	<label class = "checkbox">
						  <%= f.check_box :remember_me, :class => "checkbox" %>	
						  Remember me
						</label>
					  </div>
					</div>
				  <% end -%>

			      <div class="control-group">
			        <!-- Button Update-->
			        <div class="controls">
			          <%= f.submit "Sign in with Email", :class => "btn-flat btn-flat-primary btn-flat-medium sign_up_buttons" %>
			        </div>
			      </div>

				<% end %>
        
				<%= render "devise/shared/links" %>
		</div>
	</div>
</div>