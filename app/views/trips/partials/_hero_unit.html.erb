<!-- Begin Hero Unit -->
<div class="hero_unit big_image_header">
  <!-- Begin Tag-Line Overlay -->
  <div class="hero_tag_line">
    We Make Your Travel Planning Easy.
  </div>
  <!-- End Tag-Line Overlay -->

    <!-- Begin Splash Image Container -->
    <div class = "splash_image_container">
      <!-- Begin Splash Form Container -->
      <div class = "container splash_form_container">
        <!-- Begin Form Centering -->
        <div class ="form_centering">

            Show me trip summaries for<br/>
            <%= form_tag trips_path, :method => 'get', :class => 'hero_form', :remote => true do %>
              <div class = "hero_form_left">  
                <%= select_tag :place_dropdown_field, options_from_collection_for_select(Location.find(:all), "location_id", "location_label", params[:place]), :multiple => false, :prompt => "Where do you want to go?", :class => "place_dropdown_field" %>
              </div>
                <%= hidden_field_tag "place_text_field", params[:place], :class => "hero-hidden-place-field" %>
              
                <%= hidden_field_tag "trip_location_id", params[:trip_location_id], :class => "hero_trip_location_id" %>                          
              <div class="hero_form_left">
                for
              </div>
              <div class = "hero_form_left">
                <%= select_tag :traveler_type_id, options_from_collection_for_select(TravelerType.find(:all, :limit => 4), "traveler_type_id", "traveler_type_name", params[:traveler_type_id]), :multiple => true, :class => "traveler_type_multiselect" %>                    
              </div>
              <div class="input-prepend hero_from_prepend">
                <span class="add-on">from</span>
                <%= text_field_tag :from, params[:from], :class => "from-datefield input-small", :id => "from-datefield" %> 
              </div>
              <div class="hero_form_left">
                 for
              </div>
              <div class="input-append hero_days_append">
                <%= text_field_tag :days, params[:days], :placeholder=>"#", :value=>3 %>
                <span class="add-on">days</span>
              </div>  
              <%= submit_tag "Search Trips", :name => nil, :class => 'btn-flat btn-flat-primary splash_submit_button' %>
            <% end %>

            <div class = "error_msg"></div>

        </div>
        <!-- End Form Centering -->
      </div>
      <!-- End Splash Form Container -->
    </div>
    <!-- End Splash Image Container -->
  </div>
  <!-- End Hero Unit -->