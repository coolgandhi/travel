<% if @locations %>
  <% @locations.each do |location| %>
    <%= location.name %>
    <%= location.location_activities.count %>
    <%= link_to location.name, params.merge({:location => location.location_detail_id}), :remote=>true %>
    <br/>
  <% end %>
<% end %>
<br/> <br/>
<% if @restaurants %>
  <% @restaurants.each do |restaurant| %>
    <%= restaurant.name %>
    <%= restaurant.food_activities.count %>
     <%= link_to restaurant.name, params.merge({:restaurant => restaurant.restaurant_detail_id}), :remote=>true %>
    <br/>
  <% end %>
<% end %>
