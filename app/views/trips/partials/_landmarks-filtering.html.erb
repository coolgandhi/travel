<% if @locations %>
  <ul class="breadcrumb">
    <% @locations.each_with_index do |location, index| %>
      <li><%= link_to location.name, params.merge({:location => location.location_detail_id}), :remote=>true %> <%= location.location_activities.count %>  <% if index < @locations.length - 1 %> <span class="divider">/</span> <% end %> </li>
    <% end %>
  </ul>
<% end %>
<br/> <br/>
<% if @restaurants %>
  <ul class="breadcrumb">
    <% @restaurants.each_with_index do |restaurant, index| %>
      <li> <%= link_to restaurant.name, params.merge({:restaurant => restaurant.restaurant_detail_id}), :remote=>true %> <%= restaurant.food_activities.count %> <% if index < @restaurants.length - 1 %> <span class="divider">/</span> <% end %> </li>
    <% end %>
  </ul>
<% end %>
