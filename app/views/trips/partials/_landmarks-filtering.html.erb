<!--Begin Filter by Landmarks Div Bar -->
<div class = "filter-by-bar">

<% if @locations.length > 0 %>
  <ul class="breadcrumb location-filter-bar">
    <li>Filter by location <span class="divider">|</span></li>
    <% @locations[0..4].each_with_index do |location, index| %>
      <li>
        <%= link_to "#{location.name} (#{location.location_activities.count})", params.merge({:location => location.location_detail_id}), :remote=>true %> 
        <% if index < @locations.length - 1 %> 
          <span class="divider">|</span> 
        <% end %> 
      </li>
    <% end %>

    <% if @locations[5..-1] %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          See More
          <b class="caret"></b>
        </a>  
      <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
    
      <% @locations[5..-1].each_with_index do |location, index| %>
        <li>
          <%= link_to "#{location.name} (#{location.location_activities.count})", params.merge({:location => location.location_detail_id}), :remote=>true %> 
        </li>
      <% end %>
    <% end %>
  </ul>
  </li>
</ul>
<hr/>
<% end %>



<% if @restaurants.length > 0 %>
  <ul class="breadcrumb restaurant-filter-bar">
    <li>Filter by restaurant <span class="divider">|</span></li>
    <% @restaurants[0..4].each_with_index do |restaurant, index| %> 
      <li> 
        <%= link_to "#{restaurant.name} (#{restaurant.food_activities.count})", params.merge({:restaurant => restaurant.restaurant_detail_id}), :remote=>true %> 
        <% if index < @restaurants.length - 1 %> 
          <span class="divider">|</span> 
        <% end %> 
      </li>
    <% end %>

    <% if @restaurants[5..-1] %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          See More
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
      
        <% @restaurants[5..-1].each_with_index do |restaurant, index| %>
          <li>
            <%= link_to "#{restaurant.name} (#{restaurant.food_activities.count})", params.merge({:restaurant => restaurant.restaurant_detail_id}), :remote=>true, :tabindex=>"-1" %> 
          </li>
        <% end %>
      <% end %>
    </ul>
  </li>
</ul>
<% end %>

</div>
<!--End Filter by Landmarks Div Bar-->

<!--Begin Search Parameters Breadcrumbs-->
<div class= "search-params-crumbs">
  Showing trip summaries
  <% unless params["place-text-field"].blank? %> 
   for <%=  params["place-text-field"] %>
  <% end %>
  <% unless params["from"].blank? %>
   starting <%= params["from"] %>
  <% end %>
  <% unless params["days"].blank? %>
   for <%= params["days"] %> days
  <% end %>
  <% unless params["traveler_type_id"].blank? %>
    for 
    <% @traveler_types.each do |traveler_type| %>
      <%= traveler_type[:traveler_type_name] %>
    <% end %> 
  <% end %>
</div>
<!--End Search Parameters Breadcrumbs-->