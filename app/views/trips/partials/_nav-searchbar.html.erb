<%= form_tag trips_path, :method => 'get', :remote => @trip.nil? ? true : false, :class => 'droptoggle-form' do %>
  <%= hidden_field_tag "show_hero", params[:show_hero], :value=> false %> 
  <%= hidden_field_tag "place-text-field", params[:place], :placeholder => "Where would you like to go?", :class => "drophide-place-field", :id => "drophide-place-field" %>
  <%= hidden_field_tag "trip_location_id", params[:trip_location_id], :class => "dropdown_trip_location_id" %> 

  <div class="control-group">
    <div class="controls">
      <%= select_tag :traveler_type_id, options_from_collection_for_select(TravelerType.find(:all, :limit => 4), "traveler_type_id", "traveler_type_name", params[:traveler_type_id]), :multiple => true, :class => "dropdown-traveler-type-multiselect", :id => "dropdown_traveler_type_id" %>
    </div>
  </div>
  
  <div class="control-group">
    <div class="controls">
    <div class="input-prepend from-prepend">
      <span class="add-on">from</span>  
      <%= text_field_tag :from, params[:from], :class => "dropdown-from-datefield input-small", :id => "dropdown-from-datefield" %>
    </div>
    <div class="input-append day-form-input-append">
      <%= text_field_tag :days, params[:days], :class => "input-mini dropdown-days-field", :placeholder=>"# of", :id => "dropdown-day-field", :value=>3 %>
      <span class="add-on">days</span>
    </div>
    </div>
  </div>
  
  <div class="control-group button-control-group">
  <button type="button" class="btn-flat btn-flat-danger dropdown-close-button">Cancel</button>
  <%= submit_tag "Search Trips", :name => nil, :class => 'btn-flat btn-flat-primary dropdown-search-button' %>
  </div>
<% end %>
<div class = "error-msg"></div>