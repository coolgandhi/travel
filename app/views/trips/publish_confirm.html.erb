<div class = "container">
  
  <div class = "row">
    <!-- Begin Span -->
    <div class = "span8">
      <!-- Begin Form Completion Status Container -->
      <%= render "trips/partials/publish/completion_status_widget" %>
      <!-- End Form Completion Status Container -->
    </div>
  <!-- End Span -->
    <div class = "span4">
      <p>
        <%= link_to "Preview Trip", trip_url(@trip), :class => "btn-flat btn-flat-inverse pull-right", :target => "_blank" %>
      </p>
    </div>
  </div>

  <div class="publish_flash_message">
    <%= render :partial => 'layouts/messages', :locals => { :flash => flash } %>
  </div>

  <!-- Begin Row-->
  <div class = "row">
    <!-- Begin Collapser Container-->
    <div class = "publish_trip_collapser span12">
      <!-- Begin Collapse 1-->
      <div class = "publish_trip_collapse_header">
        Publish Your Trip
        <div class = "collapser_icon"><i class = "icon-chevron-up"></i></div>
      </div>
      
      <div class = "publish_trip_collapse_content publish_form_trip_details">
        <div class="publish_trip_details_container">
          <span class="help-inline publish_form_required_label">
            Personalize the title and tell us more about the trip before you share this trip with the world. :)
          </span>
          <br>
          <br>
        <%= form_for @trip, :url => @trip_publish, :html => {:class => "form-horizontal pt_confirm_form", :multipart => true} do |f| %>

          <% if @trip.errors.any? %>
            <div id="error_explanation">
              <ul>      
                <% @trip.errors.messages.each do |attr, msg| %>
                  <li><%= msg.first %></li>
                <% end %>
              </ul>      
            </div>
          <% end %>
          
          <div class = "pt_gray_box">
            <%= render "shared/publish/publish_trip_confirm_form", :f => f  %>
          </div>
          
          <div class="control-group">
            <div class="controls">
              <%= f.submit @trip_message, :name => @trip_name, :id => "trip_form_submit", :class => "btn-flat btn-flat-success btn-flat-large pull-right" %>
            </div>
          </div>

        <% end %>
        <div class="error_msg"></div>
        </div>
      </div>
      <!-- End Collapse 1-->
    </div>
    <!-- End Collapser Container-->  
  </div>
  <!-- End Row -->
</div>