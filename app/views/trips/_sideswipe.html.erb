<div class="triptitlebox">
  <div class = "badge_buttons">
    <ul class = "unstyled badges-ul">
    <li>
      <a class= <%=traveler_type_badge_class(@trip.traveler_type[:traveler_type_name])%> ></a>
      <p><%=@trip.traveler_type[:traveler_type_name]%></p>
    </li>
    </ul>
  </div>

  <div class="trip_title_text">
    <p>
      <span class="trip_title_main_text title_large"><%= @trip.trip_name %></span> 
    </p>
    
      <!--Begin show overview button that shows up only on small screens-->
      <label class="toggle-menu" href="#trip_overview_modal" role="button" data-toggle="modal">
        <i class="icon-reorder icon-border"></i>
      </label>
      <!--End show overview button that shows up only on small screens -->
    
    <span class="trip_title_sub_text caption_large"><%= @trip.duration %> Days in <%= @trip.location[:place] %> | by </span>
    
    <span class="trip_title_sub_text caption_large author_intrip_popover" data-content = '<%= render "trips/partials/author_popover_content", :trip => @trip %>'>
      <% if !@trip.author_info.self_image.blank? %>
         <div class="trip_title_auth_pic">
           <%= image_tag(@trip.author_info.self_image_url(:thumb), :alt => "profile", :class => "auth_img_tag") %>
         </div>
      <% else %>
        <div class="trip_title_auth_pic">
          <%= image_tag avatar_url(@trip.author_info), :alt => "profile", :class => "auth_img_tag" %>
        </div>
      <% end %>

      <%= link_to @trip.author_info.author_name, author_page_author_info_path(@trip.author_info.id), :target => "_blank" %>

    </span>
  </div>



  <div class="socialmediabox">
    <div class = "it_facebook_share">
      <div id="fb-root"></div>
      <div class="fb-like" data-href="<%=  (Rails.env == "production") ? "#{url_for(:only_path => false)}" : "http://espn.com" %>" data-send="true" data-layout="button_count" data-width="450" data-show-faces="true" data-font="verdana" data-action="recommend">
      </div>
    </div>

    <div class ="it_share_this">
      <span class='st_twitter'></span>
      <span class='st_googleplus'></span>
      <span class='st_pinterest'></span>
      <span class='st_email'></span>
      <span class='st_sharethis'></span>
    </div>
  </div>

</div>

<div class= "wrapper_film" id="filmstrip-scroll">
  
  <div class="overview_button_wrapper">

  </div>

  <div class="filmstrip">
    <ul class="media-list" id="navswipe">
      <%= render "trips/partials/filmstrip_thumbnails" %>
    </ul>
  </div>
</div>

<div id="wrappiest">
  <%= image_tag("/assets/spinners/ajax-loader.gif", :class => "swipe_loading_indicator") %>
  <%= render "trips/partials/trip_overview_modal" %>
  <%= render "trips/partials/map_overview_modal" %>

  <!-- /navigation arrows -->
  <div class="bottomnavigationbar" id="leftnavigation" onclick="trips_namespace.gallery.prev()"><i class="icon-chevron-left"></i></div>
        
  <div class="bottomnavigationbar" id="rightnavigation" onclick="trips_namespace.gallery.next()"  ><i class="icon-chevron-right"></i></div>
  <!-- /end navigation arrows -->

  <div id="loadjs" data-activities="<%= @compressed_activities.to_json %>">
  </div>

  <div id="swipewrapper"></div>
</div>

